<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title - R3 Parser Application</title>
    <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
    <meta name="viewport" content="width=device-width" />
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/angular")
    <script src="~/Scripts/app/R3App.js"></script>
</head>
<body ng-app="R3App">
    <header>
    <div class="content-wrapper" ng-controller="ApplicationController">
        <div class="row">
            <div class="col-lg-3">
                <p class="site-title">@Html.ActionLink("Home", "Index", "Home")</p>
            </div>
            <div class="col-lg-9" ng-if="applicationStatus.LastDateTaken">
                <span class="pull-right">
                Last Date Taken:<b>{{::applicationStatus.LastDateTaken | date:'yyyy-MM-dd'}}</b>
                Total:<b>{{::applicationStatus.TotalNumberOfRecords}}</b> <br>
                Yes:<b>{{::applicationStatus.NumberOfYes}}</b>
                No:<b>{{::applicationStatus.NumberOfNo}}</b>
                Maybe:<b>{{::applicationStatus.NumberOfMaybe}}</b>
                To check:<b>{{::applicationStatus.NumberOfUnclear}}</b>
                </span>
            </div>
        </div>
    </div>
</header>
    <div id="body">
        @RenderSection("featured", false)
        <section class="content-wrapper main-content clear-fix">
        @RenderBody()
    </section>
    </div>
    <footer>
    <div class="content-wrapper">
        <div class="float-left">
            <p>&copy; @DateTime.Now.Year - R3 Parser Application</p>
        </div>
    </div>
</footer>
</body>
</html>

<script src="~/Scripts/app/ApplicationController.js"></script>

